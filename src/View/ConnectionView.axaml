			<Rectangle Fill="GhostWhite" Canvas.Right="20" Canvas.Top="20" Height="40" Width="40">
			</Rectangle>
			<TextBlock x:Name="ServerUpdate_block" Text="Placeholder updates" FontFamily="Abadi" FontSize="16" Canvas.Right="270" Canvas.Top="140" Background="GhostWhite" />
		</Canvas>
	</Grid>
	
</UserControl>
